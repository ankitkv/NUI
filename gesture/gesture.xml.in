<?xml version="1.0"?>
<compiz>
    <plugin name="gesture" useBcop="true">
	<_short>3D Gestures</_short>
	<_long>3D Gestures</_long>
	<category>Window Management</category>
	<deps>
	    <relation type="after">
		<plugin>composite</plugin>
		<plugin>opengl</plugin>
		<plugin>decor</plugin>
	    </relation>
	</deps>
	<options>
		<option name="screen_toggle_key" type="key">
		<_short>Initiate Screen</_short>
		<_long>Start gesture system</_long>
		<default>&lt;Shift&gt;&lt;Alt&gt;g</default>
		</option>
	</options>
    </plugin>
</compiz>
